# Description: Library for manipulating sound files.
# URL: http://www.mega-nerd.com/libsndfile

name=libsndfile
version=1.0.25
release=1
source=(http://www.mega-nerd.com/$name/files/$name-$version.tar.gz)
depends=(flac
         alsa-lib
         libvorbis)

build() {
   cd $name-$version

   ./configure \
        --build=$BUILD \
        --host=$HOST \
        --prefix=/usr \
        --mandir=/usr/man \
        --disable-static

   make
   make DESTDIR=$PKG install

   rm -r $PKG/usr/share/doc
   rmdir $PKG/usr/share

   # Fix libtool files
   fix_la_files $PKG
}
